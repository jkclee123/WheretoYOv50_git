<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siubo.wheretoyov50.t_settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/common_google_signin_btn_text_dark_default" />

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the settings page."
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="556dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toBottomOf="@id/textView0"
                app:srcCompat="@drawable/t_settings" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Select your hobbies"
                app:layout_constraintTop_toBottomOf="@id/imageView5"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF0000"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Choose whether if you want to add noise to your marker. (Please note: If you add noise to your marker, the markers you receive will also deviate from the original marker)"
                app:layout_constraintTop_toBottomOf="@id/textView7"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#22B14C"/>
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Choose your home location. This is to prevent the app from sending your home location to the database."
                app:layout_constraintTop_toBottomOf="@id/textView8"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3f48cc"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="556dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toBottomOf="@id/textView9"
                app:srcCompat="@drawable/t_settings2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Press 'Save' to save all settings. You are ready to go!"
                app:layout_constraintTop_toBottomOf="@id/imageView6"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
